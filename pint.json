{
    "preset": "laravel",
    "rules": {
        "fully_qualified_strict_types": true,
        "global_namespace_import": {
            "import_classes": true,
            "import_constants": true,
            "import_functions": true
        },
        "braces_position": {
            "anonymous_functions_opening_brace": "next_line_unless_newline_at_signature_end"
        }
    }
}